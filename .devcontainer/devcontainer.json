// devcontainer.json
{
    "name": "C++",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"twxs.cmake",
				"ms-azuretools.vscode-docker",
				"ms-vscode-remote.remote-containers",
				"xaver.clang-format",
				"ms-vscode.cmake-tools",
				"ms-python.python"
			]
		}
	},
    "postCreateCommand": "apt-get update && apt-get install -y cmake clang-tools clang-format gdb && apt-get clean && rm -rf /var/lib/apt/lists/*",
    "forwardPorts": [8080]
}
